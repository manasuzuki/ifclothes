
<% if current_user.admin?  %>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        
        <td>
        
        <%= link_to post_path(post), class: 'hoge' do %>
          <% if post.image? %>
            <%= image_tag post.image.to_s %>
          <% else %>
            <%= image_tag 'no_image.png' %>
          <% end %>
          <% end %>
          <%= post.name %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<%else%>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        
        <td>
        
        <%= link_to post_path(post), class: 'hoge' do %>
