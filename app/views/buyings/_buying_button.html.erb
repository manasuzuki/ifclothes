
<% if current_user.buying?(post) %>
    <%= form_with(model: current_user.buyings.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <!--post_idはparams[post_id]のこと、これにpost.idをセットしてどの投稿かを特定する-->
      <%= f.submit 'カートから削除', class: 'btn btn-outline-dark btn-sm' %>
    <% end %>
    <% else %>
    <%= form_with(model: current_user.buyings.build, local: true) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'カートに入れる', class: 'btn btn-outline-info btn-sm btn-block' %>
    <% end %>
<% end %>

